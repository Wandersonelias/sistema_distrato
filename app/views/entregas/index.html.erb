<div class="page-header">
  <%= link_to new_entrega_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Criar entrega
  <% end %>
  <h1>Entregas</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nome</th>
            <th>Endereco</th>
            <th>Processo</th>
            <th>Ações</th>
            
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @entregas) do |entrega| %>
            <td><%= entrega.nome %></td>
            <td><%= entrega.endereco %></td>
            <td><%= entrega.processo %></td>

            <td class= "ml">
              <%= link_to 'Detalhar', entrega , class: "btn btn-success" %>
                <%= link_to 'Retificar', edit_entrega_path(entrega), class: "btn btn-warning" %>
                <%= link_to 'Deletar', entrega, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
            </td>
      <% end %>
    </tbody>
  </table>
</div>
