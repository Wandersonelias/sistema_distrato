<%= form_for(@contum, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @contum.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@contum.errors.count, "error") %> prohibited this contum from being saved:</h4>

      <ul>
      <% @contum.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :entrega, "Entrega", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :entrega_id, Entrega.where(:situacao => 0), :id, :nome, {}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tipo_contum, "Tipo conta", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :tipo_contum_id, TipoContum.all, :id, :descricao, {}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cadastro, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cadastro, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :referencia, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :referencia, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :vencimento, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :vencimento, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :valor, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :valor, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Observações", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :observacao, class: "form-control" %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Salvar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>


